meta {
  name: View an specific piece
  type: http
  seq: 4
}

get {
  url: http://localhost:8002/machine/status/piece/1/1
  body: none
  auth: inherit
}

assert {
  res.status: eq 200
  res.body: isJson
  res.body.order: isJson
  res.body.id: isNumber
  res.body.id: eq {{pieceId}}
  res.body.manufacturing_date: isDefined
  res.body.status: isNotEmpty
}

settings {
  encodeUrl: true
  timeout: 0
}
